<div class="row justify-content-md-center" >
  <div class="col-md-4 col-md-4-offset-4">
    <h1>Sign Up</h1>
    {{#if hasErrors}}
    </div class="alert alert-danger">
      {{# each messages}}
        <p>{{this}}</p>
      {{/each}}
    </div>
    {{/if}}
    <form method="POST" action="signup">
      <div class="form-group">
        <label for="emailAddress">Email address</label>
        <input type="email" class="form-control" name="emailAddress" id="emailAddress" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control" name="userName" id="userName">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" id="password">
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" class="form-control" name="confirmPassword" id="confirmPassword">
      </div>
      <input type="hidden" name="_csrf" value="{{csrfToken}}">
      <button type="submit" id="btnSubmit" class="btn btn-primary">Sign up</button>
    </form>
    <p>Already have an account? <a href="login">Login!</a></p>
  </div>
</div>