<h3 style="text-align:center">{{tag}}</h3>

<form method="POST" action="/">
    <input type="text" name="name"/>
    <input type="submit"/>
</form>

{{#if name}}
<center style="margin-top:10px">
    <audio controls>
        <source src="/file/{{name}}" type="audio/mp3">
    </audio>
</center> 
{{/if}}