<div class="container">
    <div class="row">
        <form method="POST" action="/file/upload">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="fileName">File Name</label>
                    <input type="text" class="form-control" id="fileName" name="fileName" placeholder="title">
                </div>
            </div>
            <div class="form-group">
                <label for="fileDescription">File Description</label>
                <textarea class="form-control" id="fileDescription" name="fileDescription" rows="3"></textarea>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload dat shit</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="fileUpload" aria-describedby="inputGroupFileAddon01">
                    <label class="custom-file-label" for="fileUpload">Choose file to Upload boiiiii</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" id="btnFileSubmit">Submit</button>
        </form>
    </div>
</div>